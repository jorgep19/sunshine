<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <EditTextPreference
        android:title="@string/location"
        android:key="@string/pref_location_key"
        android:defaultValue="@string/location_pref_default_value"
        android:inputType="text"
        android:singleLine="true" />

    <ListPreference
        android:title="@string/temperature_units"
        android:key="@string/pref_unit_key"
        android:defaultValue="@string/metric_value"
        android:entries="@array/temperature_units_labels"
        android:entryValues="@array/temperature_units_values"/>

</PreferenceScreen>